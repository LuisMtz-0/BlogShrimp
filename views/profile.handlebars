      <div class="text-2xl w-4/6 mx-auto mt-4 border-b-4 border-black">
        <div class="italic font-bold">
          <h2>Welcome, {{name}}!</h2>
        </div>
      </div>
      
      <div class="text-white w-5/6 mx-auto mt-5 ">
        <div class="border-2 border-white bg-black ">
          <h3 class="text-2xl underline ">Create a New Post:</h3>
      
          <form class="ml-4 mt-4 underline new-post-form">
            <div class="">
              <label for="post-name" >post name:</label>
              <input class="rounded-xl w-1/2 text-black ml-2" type="text" id="post-name" name="post-name" />
            </div>
            <div class="mt-4">
              <label for="post-desc">description:</label>
              <textarea class="rounded-xl w-full h-fit text-black text-xl" id="post-desc" name="post-desc"></textarea>
            </div>
            <div class="bg-white my-4 hover:bg-green-900 w-1/6 text-black text-center rounded-xl " >
              <button type="submit" class="">Create</button>
            </div>
          </form>
        </div>
      
        {{#if posts.length}}
        <div class="mt-4 bg-black">
          <h3 class="text-center border-b-4 border-white w-1/2 mx-auto mb-4">Current Posts:</h3>
      
          {{#each posts as |post|}}
          <div class="my-2 border-2 border-white">
            <div class=" text-white text-2xl underline">
              <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
            </div>
            <div class="bg-white w-1/6 rounded-xl text text-center mx-4 my-2 text-black hover:bg-red-600">
              <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
          </div>
          {{/each}}
        </div>
        {{/if}}
      </div>
      
      <script src="./js/profile.js"></script>