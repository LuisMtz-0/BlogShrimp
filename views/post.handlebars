<div class="text-center bg-white w-5/6 mx-auto h-1/2 my-48 rounded-xl">
  <p id="postId" hidden>{{id}}</p>
  <h2 class="border-b-4 border-black text-2xl w-1/2 mx-auto">{{name}}</h2>
  <p class="bg-black text-white text-start w-5/6 mx-auto my-2 h-48">{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p> {{test}}</p>
  {{#if Comments}}
  {{#each Comments as |comment| }}
    <p>{{comment.body}}</p>
  {{/each}}
  {{/if}}
  {{#each Comment as |comment| }}
    <p>t {{comment.body}}</p>
  {{/each}}
  {{#if logged_in}}
  <form class="form new-post-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <input class="form-input" type="text" id="comment" name="comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
   {{/if}}
</div>
<script src="/js/comment.js"></script>